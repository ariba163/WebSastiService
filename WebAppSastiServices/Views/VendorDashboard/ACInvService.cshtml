@model WebAppSastiServices.Models.DB.STPService
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ACInvService</title>
</head>
<body>
    <div class="col-md-6">
        <div class="card card-white">
            <div class="card-heading clearfix">
                <h4 class="card-title">Add Services</h4>
            </div>
            <div class="card-body">

                <div>
                    <div class="row">
                        <div class="col-12" id="AddService">

                            @using (Html.BeginForm("ACInvService", "VendorDashboard", FormMethod.Post))
                            {


                            <div class="form-group row">
                                @Html.LabelFor(model => model.ServiceName, "Service Name", htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                                <div class="col-sm-7">
                                    @Html.DropDownList("ServiceName", (SelectList)ViewBag.Services, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                                    </div>
                                    @*<label class="col-sm-5 col-form-label">Service Name</label>
                                    <div class="col-sm-7">
                                        <select class="form-control">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                </div>*@
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.ServiceRate, "Service Rate", htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                                <div class="col-sm-7">
                                    @Html.TextBox("Service Rate", null,htmlAttributes: new { @class = "form-control" ,@disabled="disabled", @value=""} )
                                    @Html.ValidationMessageFor(model => model.ServiceRate, "", new { @class = "text-danger" })
                                </div>
                                @*<label class="col-sm-5 col-form-label">Charges</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" value="20000" disabled>
                                </div>*@
                            </div>
                                <div class="form-group row">
                                    <label class="col-sm-5 col-form-label">Discount(if any)</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <button class="btn btn-outline-primary float-right" type="submit">Add</button>



                            }








                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</body>
</html>
